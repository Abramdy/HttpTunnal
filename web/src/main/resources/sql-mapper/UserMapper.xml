<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="g.user">
    <select id="selectUserByName" resultType="g.model.UserDO">
        select * from `user` where `name` = #{name}
    </select>

    <select id="selectUserByAccount" resultType="g.model.UserDO">
        select * from `user` where `account` = #{account}
    </select>

    <insert id="insertUser" >
        insert into `user`(name, nick_name, account, password,email, phone_number)
        values(#{name}, #{nickName}, #{account}, #{password},#{email}, #{phoneNumber})
        <selectKey keyProperty="id" resultType="Long" order="AFTER">
            SELECT LAST_INSERT_ID() as id
        </selectKey>
    </insert>
</mapper>
